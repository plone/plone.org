.ui.breadcrumb {
  .divider {
    margin: 0 0.3rem;
    color: @textColor;
    font-size: 0.8rem;
    opacity: 0.9;
  }

  a.section {
    color: @textColor;

    &:hover,
    &:active,
    &:focus {
      color: @linkColor;
      text-decoration: underline;
    }
  }

  .section.active {
    color: @black;
  }
}
